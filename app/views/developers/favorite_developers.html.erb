<%= open_graph_tags title: t(".title"), description: t(".description") %>

<div class="mt-16 mx-auto max-w-7xl px-4 sm:mt-24">
  <div class="text-center">
    <h1 class="text-3xl font-extrabold sm:text-5xl md:text-6xl text-gray-800">
      <%= t(".title") %>
    </h1>
    <p class="mt-4 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
      <%= t(".subtitle") %>
    </p>
  </div>
</div>

<div class="max-w-5xl mx-auto mt-24 sm:mt-32">
  <% if @developers.any? %>
    <div class="shadow overflow-hidden sm:rounded-md divide-y divide-gray-200">
      <%= render Developers::CardComponent.with_collection(@developers, current_user: current_user) %>
    </div>
  <% else %>
    <%= render EmptyStateComponent.new(t(".empty_state.title"), "heart", body: t(".empty_state.body")) %>
  <% end %>
</div>
